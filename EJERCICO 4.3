CREATE TABLE numeros (
entero INT
);

INSERT INTO numeros (entero) VALUES
(5), (6), (10), (10), (13), (14), (17), (20), (81), (90), (76);


SELECT AVG(entero) AS media FROM numeros;


SELECT AVG(entero) AS mediana
FROM (SELECT entero FROM numeros ORDER BY entero LIMIT 2 OFFSET (SELECT FLOOR((COUNT(*) - 1) / 2) FROM numeros)) AS subquery;


SELECT entero AS moda, COUNT(entero) AS frecuencia
FROM numeros
GROUP BY entero
ORDER BY frecuencia DESC, entero ASC
LIMIT 1;


SELECT (MAX(entero) - MIN(entero)) AS rango FROM numeros;
